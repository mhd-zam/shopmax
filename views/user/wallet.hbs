<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Mukta:300,400,700">
    <link rel="stylesheet" href="/user/fonts/icomoon/style.css">
    <link rel="stylesheet" href="/user/stylesheet/bootstrap.min.css">
    <link rel="stylesheet" href="/user/stylesheet/magnific-popup.css">
    <link rel="stylesheet" href="/user/stylesheet/jquery-ui.css">
    <link rel="stylesheet" href="/user/stylesheet/owl.carousel.min.css">
    <link rel="stylesheet" href="/user/stylesheet/owl.theme.default.min.css">
    <link rel="stylesheet" href="/user/stylesheet/aos.css">
    <link rel="stylesheet" href="/user/stylesheet/style.css">
    <link rel="stylesheet" href="user.css">
    <script src="https://kit.fontawesome.com/ace98fed36.js" crossorigin="anonymous"></script>
</head>

<body>
    <div class="site-wrap">
        {{>userheader}}
        <div class="container rounded bg-white" style="margin-top: 3%;">
            {{>profilesidebar}}
            <div class="row mt-5 d-flex justify-content-center">
                <div class="col-md-4 "></div>
                <div class="col-md-4 ">
                    <div class="card text-center text-dark"
                        style="width: 21.5rem;border-radius: 20px;border-width:3px;border-color: #ee4266;">
                        <div class="card-body">
                            <h2 class="card-title"><i class="fa-solid fa-wallet"></i>Wallet</h2>
                            <h3 class="card-title">{{wallet.walletAmt}}</h3>
                        </div>
                    </div>
                </div>
                <div class="col-md-4"></div>
                <div class=" card  mt-3" style="border-radius: 20px;border-width:3px;border-color: #ee4266;">
                    <table class="table table-borderless ">
                        <thead>
                            <tr>
                                <th scope="col">Type</th>
                                <th scope="col">Details</th>
                                <th scope="col">Date</th>
                                <th scope="col">Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each wallet.history}}
                            <tr>
                                <td>{{this.Type}}</td>
                                <td>{{this.Detail}}&nbsp;{{this.quantity}}</td>
                                <td>{{this.Date}}</td>
                                <td><strong>{{this.Amount}}</strong></td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>



            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
        integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/elevatezoom/3.0.8/jquery.elevatezoom.min.js"></script>
    <script src="/user/js/jquery-3.3.1.min.js"></script>
    <script src="/user/js/jquery-ui.js"></script>
    <script src="/user/js/popper.min.js"></script>
    <script src="/user/js/bootstrap.min.js"></script>
    <script src="/user/js/owl.carousel.min.js"></script>
    <script src="/user/js/jquery.magnific-popup.min.js"></script>
    <script src="/user/js/aos.js"></script>
    <script src="/user/js/main.js"></script>
    <script src="/user/js/default.js"></script>
    <script src="/user/js/changepassword.js"></script>
     <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
 <script src="/user/js/count.js"></script>
    <script>
        let currentlocation = location.href
        let menu = document.querySelectorAll('a.nav-item')
        let length = menu.length
        for (i = 0; i < length; i++) {
            if (menu[i].href === currentlocation) {
                menu[i].className = 'nav-item nav-link bg-primary text-light'
            }
        }
    </script>
</body>

</html>