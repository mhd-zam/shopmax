    <script>
    function search() {
      let product = document.getElementsByClassName('item-entry')
      let productname = document.getElementsByClassName('item-title')
      let searchval = document.getElementById('k').value.toLowerCase()
      for (i = 0; i < product.length; i++) {
        if (productname[i].innerHTML.toLowerCase().search(searchval) == -1) {
          product[i].hidden = true
        } else {
          product[i].hidden = false
        }
      }


    }
  </script>

