<body  class="animsition">
	<div class="site-wrap">
		{{>userheader}}
		<section class="sec-product-detail bg0 p-t-65 p-b-60">
			<div  class="container">
				<div class="row">
					<div class="col-md-6 col-lg-7 p-b-30">
						<div class="p-l-25 p-r-30 p-lr-0-lg">
							<div class="wrap-slick3 flex-sb flex-w">
								<div class="wrap-slick3-dots"></div>
								<div class="wrap-slick3-arrows flex-sb-m flex-w"></div>

								<div class="slick3 gallery-lb  ">
									<div class="item-slick3" data-thumb="product/{{data.imagefileName.[0]}}">
										<div class="wrap-pic-w pos-relative">
											<img src="product/{{data.imagefileName.[0]}}" alt="IMG-PRODUCT">

											<a class="flex-c-m size-108 how-pos1 bor0 fs-16 cl10 bg0 hov-btn3 trans-04"
												href="product/{{data.imagefileName.[0]}}">
												<i class="fa fa-expand"></i>
											</a>
										</div>
									</div>

									<div class="item-slick3" data-thumb="product/{{data.imagefileName.[1]}}">
										<div class="wrap-pic-w pos-relative">
											<img src="product/{{data.imagefileName.[1]}}">

											<a class="flex-c-m size-108 how-pos1 bor0 fs-16 cl10 bg0 hov-btn3 trans-04"
												href="product/{{data.imagefileName.[1]}}">
												<i class="fa fa-expand"></i>
											</a>
										</div>
									</div>

									<div class="item-slick3" data-thumb="product/{{data.imagefileName.[2]}}">
										<div class="wrap-pic-w pos-relative">
											<img src="product/{{data.imagefileName.[2]}}" alt="IMG-PRODUCT">

											<a class="flex-c-m size-108 how-pos1 bor0 fs-16 cl10 bg0 hov-btn3 trans-04"
												href="product/{{data.imagefileName.[2]}}">
												<i class="fa fa-expand"></i>
											</a>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>

					<div   class="col-md-6 col-lg-5 p-b-30">
						<div class="p-r-50 p-t-5 p-lr-0-lg">
							<h4 class="mtext-105 cl2 js-name-detail p-b-14" style="font-weight: 700;">
								{{data.product}}
							</h4>
							<span style="color: cadetblue;font-weight: 600;"
								class="mtext-106 cl2">â‚¹<s>{{data.price}}</s>

							</span>
							<span style="color: cadetblue;font-weight: 600;" class="mtext-106 cl2">
								{{data.offerprice}}
							</span>

							<p class="stext-102 cl3 p-t-23"
								style="font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif ;">

							<p>Overview
								Fashioned for the ultimate comfort, and unique style, this casual shirt is designed with
								checks print, classic full sleeves, and spread collar. Get an uplifted smart casual
								appearance.
								Type : Smart Casual
								Design : Checked
								Neckline : Spread collar
								Style : Casual
								Sleeve Length : Full Sleeves
								Fabric : Cotton
								Fit : Slim Fit
							</p>

							<!--  -->
							<div  class="p-t-33">
								<div class="flex-w flex-r-m p-b-10"  >
									<div id="reload" class="size-204 flex-w flex-m respon6-next">

										{{#if user}}
										{{#if check}}
										{{#if data.stockempty}}
										<h2 style="color: RED;float: inline-start;">Out Of Stock</h2>
										{{else}}
										<button onclick="cart('{{data._id}}')"
											class="flex-c-m stext-101 cl0 size-101 bg1 bg-success bor1 hov-btn1 p-lr-15 trans-04 ">Add
											To Cart</button>
										{{/if}}
										{{else}}
										<a href="/cart"
											class="flex-c-m stext-101 cl0 size-101 bg1 bg-success bor1 hov-btn1 p-lr-15 trans-04 ">Go
											To Cart</a>
										{{/if}}

										{{else}}
										<a href="/login"
											class="flex-c-m stext-101 cl0 size-101 bg1 bg-success bor1 hov-btn1 p-lr-15 trans-04 ">Add
											To Cart</a>
										{{/if}}
									</div>
									<div id="refresh">
										{{#if user}}
										{{#if wishlistcheck}}
										<i class="fa-solid fa-heart text-danger " id="love1"
											onclick="fav1('{{data._id}}')"
											style="cursor: pointer;font-size:x-large;"></i>
										{{else}}
										<i class="fa-regular fa-heart " id="love" onclick="fav('{{data._id}}')"
											style="cursor: pointer;font-size:x-large;"></i>
										{{/if}}
										{{/if}}
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
